<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register New User</title>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>
   @{
    ViewData["Title"] = "Home Page";
}
<div class="wrapper">
<div class="text-center">
    @model User
    <h1>Register New User!</h1>
    <form action="/processuser" method="post">
    <p>First Name: <input asp-for="FirstName"/></p>
    <p><span style="color:red;" asp-validation-for="FirstName"></span></p>
    
    <p>Last Name: <input asp-for="LastName"/></p>
    <p><span style="color:red;" asp-validation-for="LastName"></span></p>

    <p>Email: <input asp-for="Email"/></p>
    <p><span style="color:red;" asp-validation-for="Email"></span></p>

    <p>Password: <input asp-for="Password"/></p>
    <p><span style="color:red;" asp-validation-for="Password"></span></p>

    <p>Password Confirmation: <input asp-for="Confirm"/></p>
    <p><span style="color:red;" asp-validation-for="Confirm"></span></p>
    <input type="Submit" Value="Sign up Now!" />
    </form>
    <p>Already registered? <a href="/login">Login!</a></p>

</div>
</div> 
</body>
</html>



